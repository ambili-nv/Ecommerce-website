<section class="content-main" style="margin-left: 250px;">
    <div class="row">
        <div class="col-6">
            <div class="content-header">
                <h2 class="content-title">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/admin/edit/<%= category._id %>?_method=PUT" method="post" id="editcategory">
                        <div class="row">
                            <div class="col-md-4">
                                <h6>Name of Category</h6>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <input type="text" placeholder="Type here" class="form-control" name="title"
                                        value="<%= category.title %>" id="CategoryName">
                                        <p class="text-danger" id="nameError"></p>
                                </div>
                            </div>
                        </div>
                </div>
                <hr class="mb-4 mt-0">
                <div class="col-md-9">
                    <div class="mb-4 ml-5">
                        <h6>Status</h6> <br>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" value="true" name="isListed" checked id="list"
                                <%=category.isListed===true ? 'checked' : '' %>/>
                            <label class="form-check-label" for="list">List</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" value="false" name="isListed" id="unlist"
                                <%=category.isListed===false ? 'checked' : '' %> >
                            <label class="form-check-label" for="unlist">Unlist</label>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary" style="width: fit-content;" id="submit"> Save Changes</button>
    </div>
    <%- include('../partials/flash-message.ejs') %>
        </form>
</section>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const editcategoryform = document.getElementById("editcategory");
        const addcategoryButton = document.getElementById("submit");
        const nameInput = document.getElementById("CategoryName");
        const nameError = document.getElementById("nameError");

        function validateName() {
            const nameValue = nameInput.value.trim();
            if (nameValue === "") {
                nameError.textContent = "Category name is required";
            } else if (/\d/.test(nameValue)) {
                nameError.textContent = "Category name cannot contain numbers";
            } else {
                nameError.textContent = "";
            }
            validateForm();
        }

        function validateForm() {
            const errors = [nameError.textContent];
            const hasError = errors.some((error) => error !== "");
            editcategoryButton.disabled = hasError;
        }

        nameInput.addEventListener("blur", validateName);

        editcategoryform.addEventListener("submit", function (event) {
            validateName();
            if (editcategoryButton.disabled) {
                event.preventDefault();
            }
        });

        validateForm();
    });
</script>