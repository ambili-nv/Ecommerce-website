<style>
    /* Custom Styles */
    .custom-card {
      border: 1px solid #ccc;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #fff;
    }

    .custom-image {
      height: 200px;
      width: 200px;
      border-radius: 10px 10px 0 0;
    }

    .custom-card .card-body {
      padding: 20px;
    }

    .custom-card .card-title {
      font-size: 1.25rem;
      color: #333;
      text-align: center;
      margin-bottom: 20px;
    }

    .form-group label {
      font-weight: bold;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
  </style>

  <div class="container mt-4">
    <div class="row">
        <% order.orderItems.forEach((item, index) => { %>
      <div class="col-12 d-flex justify-content-center">
       
        <div class="col-md-4 mb-4">
          <div class="card custom-card shadow">
            <img
              src="<%= item.product.images[0].thumbnailUrl %>"
              alt="Product 1"
              class="img-fluid img-thumbnail mx-auto d-block mt-3 custom-image"
            />
            <div class="card-body">
              <h5 class="card-title mb-2">Edit Order Status</h5>
              <form action="/admin/order/update/<%= item._id %>?_method=PUT" method="post">
                <div class="form-group">
                  <label for="orderId">Order Id</label>
                  <input
                    type="text"
                    class="form-control"
                    id="orderId"
                    name="orderId"
                    placeholder="Enter Order ID"
                    value="<%= order.orderId %>"
                    readonly
                  />
                </div>
                <div class="form-group">
                    <% if(item.status === "Pending" || item.status === "Shipped") { %>
                  <label for="status">New Status:</label>
                  <select name="status" class="form-control mb-3">
                    <% if (item.status === "Pending") { %>
                        <option value="Pending" <%= item.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                        <option value="Shipped" <%= item.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                        <option value="Delivered" <%= item.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                        <option value="Cancelled" <%= item.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                        <% } else if (item.status === "Shipped") { %>
                            <option value="Shipped" <%= item.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                            <option value="Delivered" <%= item.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                            <option value="Cancelled" <%= item.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                            <% } %>
                  </select>
                  <button type="submit" class="btn btn-primary btn-block">Update Status</button>
                  <% }else if(item.status === "Cancelled"){ %>
                    <h5 class="text-danger mt-3 text-weight-bold"> Order cancellled</h5>
                <% }else if(item.status === "Delivered"){ %>
                    <h5 class="text-success mt-3 text-weight-bold"> Order Delivered</h5>
                       <% } %>
                </div>
              </form>
            </div>
          </div>
        </div>
       
      </div>
      <% }) %>
    </div>
  </div>